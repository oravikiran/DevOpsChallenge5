<?xml version='1.0' encoding='utf-8'?>
<Context reloadable="true" source="org.eclipse.jst.jee.server:samplejdbcpage">

<Resource name="tomcat/UCP_atp" auth="Container"
   factory="oracle.ucp.jdbc.PoolDataSourceImpl"
   type="oracle.ucp.jdbc.PoolDataSource"
   description="UCP Pool in Tomcat"
   connectionFactoryClassName="oracle.jdbc.pool.OracleDataSource"
   minPoolSize="5"
   maxPoolSize="50"
   initialPoolSize="15"
   user="${db_user_name}"
   password="${db_user_password}"
   url="jdbc:oracle:thin:@${db_name}_medium?TNS_ADMIN=/usr/lib/oracle/${oracle_instant_client_version_short}/client64/lib/network/admin/"/>

  <WatchedResource>WEB-INF/web.xml</WatchedResource>
</Context>
